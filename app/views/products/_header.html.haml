.t-header
  .t-header__up
    .t-header__logo
      %h1.icon
        = link_to "/" do
          = image_tag "logo.svg"
      .t-header__search
        .form
          %input{type: "text", placeholder:"キーワードから探す"}
          %button{type: "submit", class:'search_btn'}
            .t-header__search-icon
              =image_tag "icon-search 1.png"



    .t-header__under
      %ul.left-side
        %li.left-side__item.list-side__item-category
          = link_to "カテゴリー", "#", { :id => "category-btn"}

          .tree
            %ul.category-tree
              %li.category-tree--item
                = link_to "レディース", "#", { :id => "1"}
              %li.category-tree--item
                = link_to "メンズ", "#", { :id => "2"}
              %li.category-tree--item
                = link_to "ベビー・キッズ", "#", { :id => "3"}
              %li.category-tree--item
                = link_to "インテリア・住まい・小物", "#", { :id => "4"}
              %li.category-tree--item
                = link_to "本・音楽・ゲーム", "#", { :id => "5"}
              %li.category-tree--item
                = link_to "おもちゃ・ホビー・グッズ", "#", { :id => "6"}
              %li.category-tree--item
                = link_to "コスメ・香水・美容", "#", { :id => "7"}
              %li.category-tree--item
                = link_to "家電・スマホ・カメラ", "#", { :id => "8"}
              %li.category-tree--item
                = link_to "スポーツ・レジャー", "#", { :id => "9"}
              %li.category-tree--item
                = link_to "ハンドメイド", "#", { :id => "10"}
              %li.category-tree--item
                = link_to "チケット", "#", { :id => "11"}
              %li.category-tree--item
                = link_to "自動車・オートバイ", "#", { :id => "12"}
              %li.category-tree--item
                = link_to "その他", "#", { :id => "13"}
        %li.left-side__item
          = link_to "ブランド", "#", { :id => "brand-btn"}
      %ul.right-side
      -if user_signed_in?
        .right-side__item.right-side__item-login
          = link_to "マイページ",new_user_session_path, { :id => "mypage-btn"}
        .right-side__item
          = link_to 'ログアウト' ,destroy_user_session_path, method: :delete
      -else
        .right-side__item.right-side__item-login
          = link_to "ログイン",new_user_session_path, { :id => "login-btn"}
        .right-side__item
          = link_to "新規会員登録",new_user_registration_path, { :id => "new-btn"}