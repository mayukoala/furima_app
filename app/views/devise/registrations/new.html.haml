
.header

.header_logo
  = link_to image_tag("/assets/logo/logo.png",class: "furima-logo",size:'300x100'), "/"

.header_text 会員登録
= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    .label-1 必須
    .field1
      = f.label 'ニックネーム'
      = f.text_field :nickname, autofocus: true, autocomplete: "nickname"

    %br/
    .label-1 必須
    .field2
      = f.label '姓'
      = f.text_field :family_name,autofocus: true, autocomplete: "family_name",size: "12x1"
      = f.label '名'
      = f.text_field :first_name,autofocus: true, autocomplete: "first_name",size: "12x1"

    %br/
    .label-1 必須
    .field22
      = f.label '姓（カナ）'
      = f.text_field :family_name_kana,autofocus: true, autocomplete: "family_name_kana",size: "12x1"
      = f.label '名（カナ）'
      = f.text_field :first_name_kana,autofocus: true, autocomplete: "first_name_kana",size: "12x1"

    %br/
    .label-1 必須
    .field3
      = f.label 'メールアドレス'
      = f.email_field :email, autofocus: true, autocomplete: "email"

    %br/
    .label-1 必須
    .field4
      = f.label '生年月日（西暦から数字8桁）'
      = f.text_field :birth, autofocus: true, autocomplete: "birth"


    %br/
    .label-1 必須
    .field5
      = f.label 'パスワード（７文字以上）'
    
      = f.password_field :password, autocomplete: "new-password"

    %br/
    .label-1 必須
    .field6
      = f.label 'パスワード（確認）'
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = f.submit "登録" , class: "button"
= render "devise/shared/links"

.footer
  .footer__info
    = link_to 'プライバシーポリシー',''
    = link_to 'フリマ利用規約',''
    = link_to '特定商取引に関する表記',''
  .footer__logo
    = link_to image_tag("/assets/logo/logo-white.png", class: "furima-white-logo",size:'200x50'), root_path
